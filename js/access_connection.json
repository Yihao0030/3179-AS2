{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Types of Access Connections Over Time",
    "subtitle": "June 2019 to June 2023",
    "fontSize": 16,
    "subtitleFontSize": 13
  },
  "width": 666,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/Yihao0030/3179-AS2/refs/heads/main/data/Volume%20of%20data%20downloaded%20by%20type%20of%20access%20connection.csv"
  },
  "transform": [
    {"fold": ["Jun-19", "Dec-19", "Jun-20", "Dec-20", "Jun-21", "Dec-21", "Jun-22", "Dec-22", "Jun-23"], "as": ["Date", "Value"]},
    {"filter": "datum.Value != null"},
    {"calculate": "replace(datum.Value, ',', '')", "as": "Value"},
    {"calculate": "toNumber(datum.Value)", "as": "Value"}
  ],
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "Date",
      "type": "ordinal",
      "axis": {"labelAngle": -45, "title": "Date"}
    },
    "y": {
      "field": "Value",
      "type": "quantitative",
      "axis": {"title": "Number of Connections", "format": "~s"}
    },
    "color": {
      "field": "Type of access connection",
      "type": "nominal",
      "scale": {
        "domain": ["Total pre-paid mobile", "Total post-paid mobile", "Total mobile broadband", "Total M2M", "Total Home Wireless Broadband"],
        "range": ["#1f77b4", "#ff7f0e", "#2ca02c", "#d62728", "#9467bd"]
      }
    },
    "tooltip": [
      {"field": "Type of access connection", "type": "nominal", "title": "Type"},
      {"field": "Date", "type": "ordinal"},
      {"field": "Value", "type": "quantitative", "format": ","}
    ]
  },
  "config": {
    "bar": {"cornerRadiusTopLeft": 3, "cornerRadiusTopRight": 3},
    "view": {"stroke": null}
  }
}
