{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Change in Total Sites by Mobile Network Operator",
    "subtitle": "2018 to 2023",
    "fontSize": 16,
    "subtitleFontSize": 13
  },
  "width": 500,
  "height": 300,
  "data": {
    "url": "https://raw.githubusercontent.com/Yihao0030/3179-AS2/refs/heads/main/data/Change%20in%20Total%20number%20of%20sites%20by%20MNO%20-%202018%20to%202023.csv"
  },
  "mark": {
    "type": "line",
    "point": {"filled": true, "size": 60},
    "strokeWidth": 3
  },
  "encoding": {
    "x": {
      "field": "Year",
      "type": "ordinal",
      "axis": {"labelAngle": 0, "titleFontSize": 12, "labelFontSize": 10}
    },
    "y": {
      "field": "Number",
      "type": "quantitative",
      "axis": {"titleFontSize": 12, "labelFontSize": 10},
      "scale": {"zero": false}
    },
    "color": {
      "field": "MNO", 
      "type": "nominal",
      "scale": {
        "domain": ["Optus", "Telstra", "TPG"],
        "range": ["#FFA500", "#0000FF", "#008000"]
      },
      "legend": {
        "title": "Mobile Network Operator",
        "titleFontSize": 12,
        "labelFontSize": 10,
        "orient": "top-right",
        "direction": "vertical",
        "offset": 0,
        "symbolSize": 100,
        "labelOffset": 5
      }
    },
    "tooltip": [
      {"field": "MNO", "type": "nominal"},
      {"field": "Year", "type": "ordinal"},
      {"field": "Number", "type": "quantitative", "format": ","}
    ]
  },
  "config": {
    "view": {"stroke": null},
    "legend": {
      "padding": 0,
      "fillColor": null,
      "strokeColor": null
    }
  }
}
