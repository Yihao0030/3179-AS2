{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Number of Sites by Mobile Network Operator",
    "subtitle": "2018-2023",
    "fontSize": 20,
    "subtitleFontSize": 14
  },
  "width": 500,
  "height": 536,
  "data": {
    "url": "https://raw.githubusercontent.com/Yihao0030/3179-AS2/refs/heads/main/data/Total%20number%20of%20sites%20by%20MNO%20-%202018%20to%202023.csv"
  },
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "Year",
      "type": "ordinal",
      "axis": {"labelAngle": 0}
    },
    "y": {
      "field": "Number",
      "type": "quantitative",
      "title": "Number of Sites",
      "axis": {"grid": false}
    },
    "xOffset": {"field": "MNO"},
    "color": {
      "field": "MNO",
      "type": "nominal",
      "scale": {
        "domain": ["Optus", "Telstra", "TPG"],
        "range": ["#FFA500", "#0000FF", "#008000"]
      },
      "legend": {"title": "Mobile Network Operator"}
    },
    "tooltip": [
      {"field": "MNO", "type": "nominal"},
      {"field": "Year", "type": "ordinal"},
      {"field": "Number", "type": "quantitative", "format": ","}
    ]
  },
  "config": {
    "bar": {"cornerRadiusTopLeft": 3, "cornerRadiusTopRight": 3},
    "view": {"stroke": null}
  }
}
